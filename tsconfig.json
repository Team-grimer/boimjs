{
  "compilerOptions": {
    "strict": false,
    "incremental": true,
    "composite": true,
    "target": "es2016",
    "module": "commonjs",
    "allowJs": true,
    "checkJs": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
  },
  "include": [
    "./packages"
  ],
  "exclude": [
    "./node_modules",
    "./docs",
    "./examples"
  ]
}