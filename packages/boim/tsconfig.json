{
  "compilerOptions": {
    "types": ["node"],
    "baseUrl": "./",
    "outDir": "../../../dist/compile/",
    "allowSyntheticDefaultImports": true,
    "jsx": "react",
    "module": "ES6",
    "noImplicitAny": false,
    "preserveConstEnums": true,
    "removeComments": true,
    "sourceMap": true,
    "target": "es5",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "allowJs": true,
  },
  "include": [
    "libs/*", "server/*", "pages/*", "common/*"
  ],
  "exclude": ["node_modules"]
}