{
  "compilerOptions": {
    "types": [
      "node",
      "jest"
    ],
    "baseUrl": "./",
    "paths": {
      "document": [ "pages/_document" ],
      "app": [ "pages/_app" ],
    },
    "rootDir": "./",
    "outDir": "./ts_build",
    "allowSyntheticDefaultImports": true,
    "jsx": "react",
    "module": "esnext",
    "noImplicitAny": false,
    "preserveConstEnums": true,
    "removeComments": true,
    "sourceMap": true,
    "target": "es2015",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    "strict": false,
    "incremental": true,
    "composite": true,
    "allowJs": true,
    "checkJs": true,
    "skipLibCheck": true,
  },
  "include": [
    "./libs/*",
    "./server/*",
    "./pages/*",
    "./pages/templates/*",
    "./common/*",
    "./config/fetchPolyfill.js",
  ],
  "exclude": [
    "./dist/*",
    "./node_modules",
    "../../../dist/*",
    "./test",
  ]
}
